@model ContactManager.Models.Contact

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Contact</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            First Name:
        </dt>
        <dd class = "col-sm-10">
            @Model.Firstname
        </dd>
        <dt class = "col-sm-2">
            Last Name:
        </dt>
        <dd class = "col-sm-10">
            @Model.Lastname
        </dd>
        <dt class = "col-sm-2">
            Phone:
        </dt>
        <dd class = "col-sm-10">
            @Model.Phone
        </dd>
        <dt class = "col-sm-2">
            Email:
        </dt>
        <dd class = "col-sm-10">
            @Model.Email
        </dd>
        <dt class = "col-sm-2">
            Category:
        </dt>
        <dd class = "col-sm-10">
            @Model.Category.Name
        </dd>
        <dt class = "col-sm-2">
            Date Added:
        </dt>
        <dd class = "col-sm-10">
            @Model.DateAdded
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>
