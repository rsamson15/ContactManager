@model ContactManager.Models.Contact

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Contact</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            First Name:
        </dt>
        <dd class = "col-sm-10">
            @Model.Firstname
        </dd>
        <dt class = "col-sm-2">
            Last Name:
        </dt>
        <dd class = "col-sm-10">
            @Model.Lastname
        </dd>
        <dt class = "col-sm-2">
            Phone:
        </dt>
        <dd class = "col-sm-10">
            @Model.Phone
        </dd>
        <dt class = "col-sm-2">
            Email:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            Category:
        </dt>
        <dd class = "col-sm-10">
            @Model.Category.Name 
            @* TODO Return name not id same as in index.cshtml *@
        </dd>
        <dt class = "col-sm-2">
            Date Added: 
        </dt>
        <dd class = "col-sm-10">
            @Model.DateAdded
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="Home" 
        asp-action="Index">Back to List</a>
    </form>

</div>
